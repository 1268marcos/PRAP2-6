// quando salvar uma classe em java acrescente ao final .JAVA

package com.example.agendiario;

import androidx.annotation.NonNull;
import androidx.annotation.Nullable;
import androidx.room.ColumnInfo;
import androidx.room.Entity;
import androidx.room.PrimaryKey;


@Entity(tableName = "comics")

public class Comic {

    @PrimaryKey(autoGenerate = true)
    @NonNull
    @ColumnInfo(name = "comicId")
    private int comicId;

    @Nullable
    @ColumnInfo(name = "comicTitle")
    private String comicTitle;

    private String comicPublishingCompany;

    public Comic(@Nullable String title, String publishingCompany, int score, String creationDate) {
        comicTitle = title;
        comicPublishingCompany = publishingCompany;
        comicScore = score;
        comicCreationDate = creationDate;
    }

    public int getId() {
        return comicId;
    }

    public void setId(int id) {
        comicId = id;
    }

    public String getTitle() {
        return comicTitle;
    }

    public void setTitle(String title) {
        comicTitle = title;
    }

    public String getPublishingCompany() {
        return comicPublishingCompany;
    }

    public void setPublishingCompany(String publishingCompany) {
        comicPublishingCompany = publishingCompany;
    }

    public int getScore() {
        return comicScore;
    }

    public void setScore(int score) {
        comicScore = score;
    }

    public String getCreationDate() {
        return comicCreationDate;
    }

    public void setCreationDate(String creationDate) {
        comicCreationDate = creationDate;
    }

    private int comicScore;
    private String comicCreationDate;

}
